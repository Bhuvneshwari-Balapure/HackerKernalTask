<div class="row">
  <div class="col-6">
    <h4>Users</h4>
  </div>
  <div class="col-6" style="text-align: right;">
    <a href="/adduser" class="btn btn-primary">+ add user</a>
  </div>
</div>

<div class="view-user">

  <div class="row">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Action</th>
            <th>Show Task</th>
          </tr>
        </thead>
        <tbody>
          {{#each rows}}
            <tr>
              <td>{{this.name}}</td>
              <td>{{this.email}}</td>
              <td>{{this.mobile}}</td>
              <td>
                <a
                  href="/deleteuser/{{this.id}}"
                  onclick="return confirm('if You delete this user, all tasks assigned to this user will also be deleted. Are you sure you want to delete this user?')"
                  class="btn btn-danger btn-sm"
                >Delete</a>
              </td>
              <td>
                <a
                  href="/tasks/{{this.id}}"
                  class="btn btn-info btn-sm"
                >Tasks</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>